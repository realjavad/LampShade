@page
@model ServiceHost.Areas.Administration.Pages.Shop.Slide.IndexModel
@{
    ViewData["title"] = "اسلایدر محصولات";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right"></h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد اسلایدر جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو محصولات</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only"></label>
                        <input class="form-control" placeholder="نام گروه محصولی">
                    </div>

                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست گروه محصولات</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>عکس</th>
                                <th>سر تیتر</th>
                                <th>عنوان</th>
                                <th>وضعیت</th>
                                <th>تاریخ</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in @Model.Slides)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="@item.Picture" alt="@item.Title" style="width: 70px; height: 70px"/>
                                    </td>
                                    <td>@item.Heading</td>
                                    <td>@item.Title</td>

                                    <td>
                                        
                                       
                                            @(item.IsRemove ? Html.Raw("<i class='fa fa-remove text-danger'></i>") : Html.Raw("<i class='fa fa-check text-success'></i>"))
                                        

                                    </td>

                                    <td>@item.CreationDate</td>

                                    <td>
                                        <a class="btn btn-warning pull-right m-rl-5"
                                           href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id })">
                                            <i class="fa fa-edit"></i>
                                            ویرایش
                                        </a>
                                        
                                        @if (item.IsRemove)
                                        {
                                            <a
                                               class="btn btn-warning pull-right m-rl-5"
                                               asp-page="./Index"
                                               asp-page-handler="Restore"
                                               asp-route-id="@item.Id"
                                            >فعال</a>
                                        }
                                        else
                                        {
                                            <a
                                                class="btn btn-warning pull-right m-rl-5"
                                                asp-page="./Index"
                                                asp-page-handler="Remove"
                                                asp-route-id="@item.Id"
                                            >حذف</a>
                                        }

                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Admin/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/assets/datatables/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>
}